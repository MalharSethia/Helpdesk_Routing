<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_inherit_helpdesk_routing" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.helpdesk.routing</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="priority" eval="5"/>
            <field name="arch" type="xml">
                <!-- Add a new notebook page for Helpdesk Routing -->
                <xpath expr="//sheet/notebook" position="inside">
                    <page string="Helpdesk Routing">
                        <group string="Team Assignment">
                            <field name="internal_domains" placeholder="wavext.io,company.com"/>
                            <field name="internal_team_id"/>
                            <field name="external_team_id"/>
                        </group>

                        <group string="Email Notifications">
                            <field name="enable_notifications"/>
                            <field name="notification_sender_email" attrs="{'invisible': [('enable_notifications', '=', False)]}"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
