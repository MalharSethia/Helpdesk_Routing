<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <div class="app_settings_block" data-string="Helpdesk Routing" data-key="helpdesk_routing">
                    <h2>Helpdesk Routing Settings</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <label for="internal_domains"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <field name="internal_domains" placeholder="wavext.io, company.com"/>
                                <div class="text-muted">
                                    Comma-separated list of internal email domains
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <label for="internal_team_id"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <field name="internal_team_id"/>
                                <div class="text-muted">
                                    Team that will handle internal tickets
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <label for="external_team_id"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <field name="external_team_id"/>
                                <div class="text-muted">
                                    Team that will handle external tickets
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
